{
	"manifest_version": 3,
	"name": "Base44 Scraper",
	"version": "1.0.0",
	"description": "Extension to scrape data from app.base44.com",
	"permissions": ["activeTab", "webRequest", "storage"],
	"host_permissions": ["*://app.base44.com/*"],
	"action": {
		"default_icon": {
			"128": "icon.png"
		},
		"default_title": "Click to scrape data"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["*://app.base44.com/*"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	]
}
